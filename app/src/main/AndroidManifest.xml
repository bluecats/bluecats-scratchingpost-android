<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.bluecats.scratchingpost">

	<!-- Permissions -->
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

	<application
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">

		<!-- Activities -->
		<activity android:name=".SitesActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".BeaconsActivity"/>

		<activity
			android:name=".BeaconSnifferActivity"
			android:label="@string/BeaconSnifferActivity.title"/>

		<!-- Services -->
		<receiver android:name="com.bluecats.sdk.BlueCatsSDKServiceReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED"/>
			</intent-filter>
		</receiver>
	</application>

</manifest>
